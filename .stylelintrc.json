{
    "extends": [
       "stylelint-config-standard",
       "stylelint-config-recommended-less"
    ],
    "ignoreFiles": [
       "dist/**/*.css"
    ],
    "overrides": [
       {
          "files": [
             "src/**/*.less"
          ],
          "customSyntax": "postcss-less"
       }
    ],
    "rules": {
       "selector-id-pattern": null,
       "selector-class-pattern": null,
       "comment-empty-line-before": null,
       "no-descending-specificity": null
    }
 }