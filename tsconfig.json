{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react",
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "oojs-ui-react": [
        "src/components/oojs-ui-react"
      ]
    },
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": [
    "dist",
    "src/components/oojs-ui-react/tests",
    "src/components/oojs-ui-react/lib",
    "src/components/oojs-ui-react/node_modules"
  ],
  "include": [
    "src/**/*",
    "node_modules/moment/index.d.ts",
    "node_modules/types-mediawiki",
    "scripts/**/*",
    "eslint.config.js",
    "rspack.config.js",
  ]
}
