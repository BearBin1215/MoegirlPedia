{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "dom.iterable"
    ],
    "jsx": "react",
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "node10",
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "oojs-ui-react": [
        "src/components/oojs-ui-react"
      ]
    },
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src",
    "node_modules/moment/index.d.ts",
    "node_modules/types-mediawiki"
  ]
}
