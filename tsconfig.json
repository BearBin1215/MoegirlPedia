{
    "compilerOptions": {
        "allowJs": true,
        "removeComments": true,
        "target": "ES3",
        "outDir": "oddment/build",
        "alwaysStrict": true,
        "strict": true,
        "downlevelIteration": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "ignoreDeprecations": "5.0"
    },
    "include": [
        "oddment",
    ],
    "exclude": [
        "oddment/build",
    ],
}