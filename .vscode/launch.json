{
    "version": "1.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Webpack Watch",
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
            "args": ["--config", "${workspaceFolder}/build/webpack.dev.js", "--watch"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
